pipeline {
    agent any
    environment {
        DOCKER_REGISTRY = ''
        IMAGE_NAME = 'python-app'
        TAG = "${env.BUILD_NUMBER}"
        SONARQUBE = 'SonarQube'
    }
    stages{
        stage('Checkout SCM')
        {
        steps {
            checkout scm
        }

    }
    stage('install dependencies') {
        steps {
            sh 'pip install -r requirement.txt'
        }
    }
    stage('Unit tests'){
        steps
        {
            sh 'pip install pytest && pytest --junitxml=report.xml'
        }
    }
    }
}
